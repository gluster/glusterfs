#return specific fields of xml output
function get-cmd-field-xml()
{
        local cli=$CLI_1;
        if [ "$cli" = "" ]; then
            cli=$CLI
        fi

        COMMAND=$1
        PATTERN=$2

        $cli $COMMAND --xml | xmllint --format - | grep $PATTERN
}

function get_snap_brick_status()
{
    local snap=$1;

    $CLI snapshot status $snap | grep "Brick Running" | sed 's/.*: //';
}


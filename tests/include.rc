function wait_delay() {
        local delay="$1"
        local interval="$2"
        shift 2
        local deadline="$(($(date +%s%N) + ${delay}000000000))"

        $*
        while [[ $? -ne 0 ]]; do
                if [[ $(date +%s%N) -ge ${deadline} ]]; then
                        return 1
                fi
                sleep ${interval}
                $*
        done

        return 0
}

_GFS () {
	glusterfs "$@"
	local mount_ret=$?
	if [ $mount_ret != 0 ]; then
		return $mount_ret
	fi
	local mount_point=${!#}
	local i=0
	while true; do
		touch $mount_point/xy_zzy 2> /dev/null && break
		i=$((i+1))
		[ $i -lt 100 ] || break
		sleep 0.1
	done
	rm -f $mount_point/xy_zzy
	return $mount_ret
}
